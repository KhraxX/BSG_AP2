@model EditMedecinViewModel
@{
    ViewData["Title"] = "Modifier mon profil";
}

<div class="max-w-2xl mx-auto mt-12 px-4">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Modifier mon profil</h2>

        <form asp-action="Edit" asp-controller="Account" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 mb-6"></div>

            <!-- Nom d'utilisateur -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="UserName" class="block text-sm font-medium text-gray-500 mb-2">Nom d'utilisateur</label>
                <input asp-for="UserName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Login -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Login_m" class="block text-sm font-medium text-gray-500 mb-2">Login</label>
                <input asp-for="Login_m" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Login_m" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Mot de passe actuel -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="CurrentPassword" class="block text-sm font-medium text-gray-500 mb-2">Mot de passe actuel</label>
                <input asp-for="CurrentPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="CurrentPassword" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Nouveau mot de passe -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="NewPassword" class="block text-sm font-medium text-gray-500 mb-2">Nouveau mot de passe</label>
                <input asp-for="NewPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="NewPassword" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Boutons -->
            <div class="flex justify-center space-x-4 pt-6">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors">
                    Enregistrer les modifications
                </button>
                <a asp-action="Index" asp-controller="Patient" 
                   class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-3 rounded-md font-medium transition-colors">
                    Annuler
                </a>
            </div>
        </form>
    </div>
</div>