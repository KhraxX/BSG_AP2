@using ASPBookProject.ViewModels
@model LoginViewModel 
@{ ViewData["Title"] = "Connexion"; }

<div class="max-w-md mx-auto mt-12 px-4">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Connexion</h2>

        <form asp-action="Login" asp-controller="Account" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 mb-6"></div>

            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="UserName" class="block text-sm font-medium text-gray-500 mb-2">
                    Nom d'utilisateur
                </label>
                <input asp-for="UserName" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Password" class="block text-sm font-medium text-gray-500 mb-2">
                    Mot de passe
                </label>
                <input asp-for="Password" type="password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Password" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="flex justify-center pt-4">
                <button type="submit" 
                        class="w-full bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors">
                    Se connecter
                </button>
            </div>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">
                Vous n'avez pas de compte ? 
                <a asp-action="Register" asp-controller="Account" 
                   class="text-blue-500 hover:text-blue-600 font-medium">
                    Inscrivez-vous ici
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}