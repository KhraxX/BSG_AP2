@using ASPBookProject.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Créer un compte";
}

<div class="max-w-md mx-auto mt-12 px-4">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Créer un compte</h2>

        <form asp-action="Register" asp-controller="Account" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 mb-6"></div>

            <!-- Nom d'utilisateur -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="UserName" class="block text-sm font-medium text-gray-500 mb-2">Nom d'utilisateur</label>
                <input asp-for="UserName"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="UserName" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Login -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Login_m" class="block text-sm font-medium text-gray-500 mb-2">Login</label>
                <input asp-for="Login_m"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Login_m" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Rôle -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Role" class="block text-sm font-medium text-gray-500 mb-2">Rôle</label>
                <input asp-for="Role"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Role" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Date de naissance -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Date" class="block text-sm font-medium text-gray-500 mb-2">Date de création</label>
                <input asp-for="Date" type="date"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Date" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Mot de passe -->
            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Password" class="block text-sm font-medium text-gray-500 mb-2">Mot de passe</label>
                <input asp-for="Password" type="password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Password" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Boutons -->

            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Déjà inscrit ?
                    <a asp-action="Login" asp-controller="Account"
                        class="text-blue-500 hover:text-blue-600 font-medium">
                        Connectez-vous
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}