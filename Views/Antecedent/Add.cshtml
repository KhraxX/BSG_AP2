@model Antecedent

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ajouter</title>
</head>



<div class="max-w-2xl mx-auto mt-12 px-4">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Créer un nouveau antécédent</h2>
        
        <form asp-action="Add" asp-controller="Antecedent" method="post" class="space-y-6">
            <div class="form-group">
                <label asp-for="Libelle_a" class="block text-sm font-medium text-gray-700 mb-2">Nom de l'antécédent</label>
                <input asp-for="Libelle_a" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Libelle_a" class="text-sm text-red-500 mt-1 block"></span>
            </div>

          
            <div class="flex justify-center pt-6">
                <input type="submit" value="Créer l'antécédent" 
                       class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors cursor-pointer" />
            </div>
        </form>

        <div asp-validation-summary="All" class="mt-6 p-4 bg-red-50 rounded-md">
            <div class="text-sm text-red-500"></div>
        </div>
    </div>
</div>