@model ContactForm
@{
    ViewData["Title"] = "Page de contact";
}
<div class="max-w-2xl mx-auto mt-12 px-4 mb-12">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Contactez-nous</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded mb-6">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Index" asp-controller="Contact" method="POST" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 mb-6"></div>

            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Name" class="block text-sm font-medium text-gray-500 mb-2"></label>
                <input asp-for="Name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Name" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Email" class="block text-sm font-medium text-gray-500 mb-2"></label>
                <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Email" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Subject" class="block text-sm font-medium text-gray-500 mb-2"></label>
                <input asp-for="Subject" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Subject" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="bg-gray-50 rounded-lg p-6">
                <label asp-for="Message" class="block text-sm font-medium text-gray-500 mb-2"></label>
                <textarea asp-for="Message" rows="5" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 resize-none"></textarea>
                <span asp-validation-for="Message" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="flex justify-center space-x-4 pt-6">
                <button type="submit" 
                        class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors">
                    Envoyer le message
                </button>
                <a asp-action="Index" asp-controller="Patient"
                   class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-3 rounded-md font-medium transition-colors">
                    Retour à l'accueil
                </a>
            </div>
        </form>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>
</div>