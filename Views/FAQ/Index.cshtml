@model IEnumerable<FAQ>

<div class="max-w-4xl mx-auto mt-12 px-4 mb-12">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-3xl font-semibold text-center text-gray-800 mb-12">Questions fréquemment posées</h2>

        <div class="space-y-6">
            @foreach (var faq in Model)
            {
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-3">@faq.Question</h3>
                    <p class="text-gray-600">@faq.Answer</p>
                </div>
            }
        </div>

        <div class="mt-12 text-center">
            <p class="text-gray-600 mb-4">Vous ne trouvez pas la réponse à votre question ?</p>
            <a asp-action="Index" asp-controller="Contact" 
               class="inline-flex items-center bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors">
                Contactez-nous
            </a>
        </div>
    </div>
</div>