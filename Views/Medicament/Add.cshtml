@model MedicamentViewModel

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ajouter</title>
</head>



<div class="max-w-2xl mx-auto mt-12 px-4">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Créer un nouveau médicament</h2>
        
        <form asp-action="Add" asp-controller="Medicament" method="post" class="space-y-6">
            <div class="form-group">
                <label asp-for="Medicament.Libelle_med" class="block text-sm font-medium text-gray-700 mb-2">Libelle médicament</label>
                <input asp-for="Medicament.Libelle_med" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Medicament.Libelle_med" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <div class="form-group">
                <label asp-for="Medicament.Contr_indication" class="block text-sm font-medium text-gray-700 mb-2">Contre indication</label>
                <input asp-for="Medicament.Contr_indication" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Medicament.Contr_indication" class="text-sm text-red-500 mt-1 block"></span>
            </div>


            <div class="form-group border rounded-lg p-6 bg-gray-50">
                <h4 class="text-lg font-medium text-gray-900 mb-4">Antécédents</h4>
                <div class="grid gap-3">
                @{
                    if (Model.Antecedents != null)
                    {
                        @foreach (var antecedent in Model.Antecedents)
                        {
                            <div class="flex items-center p-2 bg-white rounded border">
                                <input type="checkbox" 
                                       id="antecedent_@antecedent.AntecedentId" 
                                       name="SelectedAntecedentIds" 
                                       value="@antecedent.AntecedentId"
                                       @(Model.SelectedAntecedentIds != null && Model.SelectedAntecedentIds.Contains(antecedent.AntecedentId) ? "checked" : "")
                                       class="form-check-input h-4 w-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500" />
                                <label for="antecedent_@antecedent.AntecedentId" 
                                       class="form-check-label ml-3 text-sm text-gray-700 cursor-pointer">
                                    @antecedent.Libelle_a
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Aucun antécédent disponible</p>
                    }
                }
                </div>
            </div>
            <div class="form-group border rounded-lg p-6 bg-gray-50">
                <h4 class="text-lg font-medium text-gray-900 mb-4">Allérgies</h4>
                <div class="grid gap-3">
                @{
                    if (Model.Allergies != null)
                    {
                        @foreach (var allergie in Model.Allergies)
                        {
                            <div class="flex items-center p-2 bg-white rounded border">
                                <input type="checkbox" 
                                       id="allergie_@allergie.AllergieId" 
                                       name="SelectedAllergieIds" 
                                       value="@allergie.AllergieId"
                                       @(Model.SelectedAllergieIds != null && Model.SelectedAllergieIds.Contains(allergie.AllergieId) ? "checked" : "")
                                       class="form-check-input h-4 w-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500" />
                                <label for="Allergie_@allergie.AllergieId" 
                                       class="form-check-label ml-3 text-sm text-gray-700 cursor-pointer">
                                    @allergie.Libelle_al
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Aucune allergie disponible</p>
                    }
                }
                </div>
            </div>

            <div class="flex justify-center pt-6">
                <input type="submit" value="Créer le médicament" 
                       class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors cursor-pointer" />
            </div>
        </form>

        <div asp-validation-summary="All" class="mt-6 p-4 bg-red-50 rounded-md">
            <div class="text-sm text-red-500"></div>
        </div>
    </div>
</div>