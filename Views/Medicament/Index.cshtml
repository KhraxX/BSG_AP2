@{
    ViewBag.title = "Index";
}
 
@model IEnumerable<Medicament>
<style>
    .text-center,
    mb-6 {
        padding-bottom: 2em;
    }
</style>
<h1 class="text-center mb-6">Liste des Médicaments</h1>
 
 
<form asp-controller="Medicament" asp-action="Index" method="get">
    <div class="row">
        <div class="col-6">
            <input type="text" name="searchString" class="form-control">
        </div>
        <div class="col-2">
            <input type="submit" value="rechercher" class="btn btn-primary" />
        </div>
        <div class="col-2">
            <input type="submit" value="rafraichir la liste" class="btn btn-danger" />
        </div>
    </div>
</form>
@if (Model.Count() > 0)
{
    <div class="container text-center mt-4 mb-4">
        <div class="row">
            <div class="col-1"></div>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Contre indication</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Medicament in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => Medicament.Libelle_med)</td>
                            <td>@Html.DisplayFor(m => Medicament.Contr_indication)</td>
                            <td><a asp-action="Edit" asp-route-id="@Medicament.MedicamentId" id="accueil" class="btn"> Modifier</a>
                            <a asp-action="ShowDetails" asp-route-id="@Medicament.MedicamentId" id="accueil" class="btn">Détails</a></td>
                        </tr>
 
                    }
        </tbody>
        </table>
        <div class="col-1"></div>
       
    </div>
    </div>
 
}
else
{
    <p>Il n'y a pas de médicaments</p>
}
   <a asp-action="Add" id="accueil" class="btn btn-primary   ">Ajouter un nouveau médicament</a>
 
 