@model OrdonnanceViewModel
 
<div class="max-w-2xl mx-auto mt-12 px-4">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Suppression de l'ordonnance</h2>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="OrdonnanceId" />
            <div class="space-y-6">
                <!-- Posologie -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <label class="text-sm font-medium text-gray-500 mb-2 block">Posologie</label>
                    <div class="text-lg text-gray-900">@Html.DisplayFor(model => model.Posologie)</div>
                </div>

                <!-- Date de début -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <label class="text-sm font-medium text-gray-500 mb-2 block">Date de début</label>
                    <div class="text-lg text-gray-900">@Html.DisplayFor(model => model.Date_debut)</div>
                </div>

                <!-- Date de fin -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <label class="text-sm font-medium text-gray-500 mb-2 block">Date de fin</label>
                    <div class="text-lg text-gray-900">@Html.DisplayFor(model => model.Date_fin)</div>
                </div>

                <!-- Instructions spécifiques -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <label class="text-sm font-medium text-gray-500 mb-2 block">Instructions spécifiques</label>
                    <div class="text-lg text-gray-900">@Html.DisplayFor(model => model.Instructions_specifique)</div>
                </div>

                <!-- Patient -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <label class="text-sm font-medium text-gray-500 mb-2 block">Patient</label>
                    <div class="text-lg text-gray-900">@Html.DisplayFor(model => model.Patient.Prenom_p)</div>
                </div>

                <!-- Médecin -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <label class="text-sm font-medium text-gray-500 mb-2 block">Médecin</label>
                    <div class="text-lg text-gray-900">@Html.DisplayFor(model => model.Medecin.UserName)</div>
                </div>

                <!-- Médicaments -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-sm font-medium text-gray-500 mb-3">Médicaments</h3>
                    <div class="text-lg text-gray-900">
                        <div class="flex flex-wrap gap-2">
                            @foreach (var medicament in Model.Medicaments)
                            {
                                <span class="bg-white px-3 py-1 rounded-full border border-gray-200">
                                    @medicament.Libelle_med
                                </span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Message de confirmation -->
                <div class="bg-red-50 rounded-lg p-6 text-center">
                    <p class="text-red-600 font-medium mb-6">
                        Voulez-vous vraiment supprimer cette ordonnance ? Cette action est irréversible.
                    </p>
                    
                    <div class="flex justify-center space-x-4">
                        <button type="submit" 
                                class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-md font-medium transition-colors">
                            Supprimer
                        </button>
                        <a asp-action="Index" 
                           class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-3 rounded-md font-medium transition-colors">
                            Annuler
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>