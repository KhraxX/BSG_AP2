@{
}
@model PatientEditViewModel
 
<h1>Créer un nouveau Patient</h1>
 
<form asp-action="Add" asp-controller="Patient" method="post">
    @* <div class="form-group">
    <label asp-for="InstructorId"></label> <input asp-for="InstructorId" class="form-control" />
    @* ajout de message d'erreur de validation inline pour chaque propriete individuellement *@
    @*<span asp-validation-for="InstructorId" class="text-danger"></span>
    </div> *@
 
    <div class="form-group">
        <label asp-for="Patient.Nom_p"></label> <input asp-for="Patient.Nom_p" class="form-control" />
        <span asp-validation-for="Patient.Nom_p" class="text-danger"></span>
    </div>
 
    <div class="form-group">
        <label asp-for="Patient.Prenom_p"></label> <input asp-for="Patient.Prenom_p" class="form-control" />
        <span asp-validation-for="Patient.Prenom_p" class="text-danger"></span>
    </div>
 
 
 
    <div class="form-group">
<label asp-for="Patient.Sexe_p"></label>
        <select asp-for="Patient.Sexe_p" class="form-control">
            <option value=""  disabled >Sélectionné le sexe</option>
            <option value="F" selected>F</option>
            <option value="M">M</option>
        </select>
        <span asp-validation-for="Patient.Sexe_p" class="text-danger"></span>
    </div>
 
    <div class="form-group">
        <label asp-for="Patient.Num_secu"></label> <input asp-for="Patient.Num_secu" class="form-control" />
        <span asp-validation-for="Patient.Num_secu" class="text-danger"></span>
    </div>
 
    <h4>Antécédents</h4>
    <div class="form-group">
        @foreach (var antecedent in Model.Antecedents)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedAntecedentIds"
                    value="@antecedent.AntecedentId" @(Model.SelectedAntecedentIds != null &&
                Model.SelectedAntecedentIds.Contains(antecedent.AntecedentId) ? "checked" : "") />
                <label class="form-check-label">@antecedent.Libelle_a</label>
            </div>
        }
    </div>
 
    <h4>Allergies</h4>
    <div class="form-group">
        @foreach (var allergie in Model.Allergies)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedAllergieIds" value="@allergie.AllergieId"
                @(Model.SelectedAllergieIds != null && Model.SelectedAllergieIds.Contains(allergie.AllergieId) ? "checked" :
                    "") />
                <label class="form-check-label">@allergie.Libelle_al</label>
            </div>
        }
    </div>
 
    <br />
    <input type="submit" value="Créer un Patient" class="btn btn-primary" />
</form>
 
<div>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>