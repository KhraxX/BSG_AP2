@model PatientEditViewModel

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ajouter</title>
</head>



<div class="max-w-2xl mx-auto mt-12 px-4">
    <div class="bg-white rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Créer un nouveau patient</h2>
        
        <form asp-action="Add" asp-controller="Patient" method="post" class="space-y-6">
            <!-- Prénom -->
            <div class="form-group">
                <label asp-for="Patient.Prenom_p" class="block text-sm font-medium text-gray-700 mb-2">Prénom</label>
                <input asp-for="Patient.Prenom_p" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Patient.Prenom_p" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Nom -->
            <div class="form-group">
                <label asp-for="Patient.Nom_p" class="block text-sm font-medium text-gray-700 mb-2">Nom</label>
                <input asp-for="Patient.Nom_p" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Patient.Nom_p" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Sexe -->
            <div class="form-group">
                <label asp-for="Patient.Sexe_p" class="block text-sm font-medium text-gray-700 mb-2">Sexe</label>
                <select asp-for="Patient.Sexe_p" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Sélectionnez</option>
                    <option value="m">Homme</option>
                    <option value="f">Femme</option>
                    <option value="o">Autre</option>
                </select>
                <span asp-validation-for="Patient.Sexe_p" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Numéro de sécu -->
            <div class="form-group">
                <label asp-for="Patient.Num_secu" class="block text-sm font-medium text-gray-700 mb-2">Numéro de sécu</label>
                <input asp-for="Patient.Num_secu" 
                       type="text" 
                       maxlength="13" 
                       oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 13);"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Patient.Num_secu" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Section Antécédents -->
            <div class="form-group border rounded-lg p-6 bg-gray-50">
                <h4 class="text-lg font-medium text-gray-900 mb-4">Antécédents</h4>
                <div class="grid gap-3">
                @{
                    if (Model.Antecedents != null)
                    {
                        @foreach (var antecedent in Model.Antecedents)
                        {
                            <div class="flex items-center p-2 bg-white rounded border">
                                <input type="checkbox" 
                                       id="antecedent_@antecedent.AntecedentId" 
                                       name="SelectedAntecedentIds" 
                                       value="@antecedent.AntecedentId"
                                       @(Model.SelectedAntecedentIds != null && Model.SelectedAntecedentIds.Contains(antecedent.AntecedentId) ? "checked" : "")
                                       class="form-check-input h-4 w-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500" />
                                <label for="antecedent_@antecedent.AntecedentId" 
                                       class="form-check-label ml-3 text-sm text-gray-700 cursor-pointer">
                                    @antecedent.Libelle_a
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Aucun antécédent disponible</p>
                    }
                }
                </div>
            </div>
             <!-- Section Antécédents -->
            <div class="form-group border rounded-lg p-6 bg-gray-50">
                <h4 class="text-lg font-medium text-gray-900 mb-4">Allérgies</h4>
                <div class="grid gap-3">
                @{
                    if (Model.Allergies != null)
                    {
                        @foreach (var allergie in Model.Allergies)
                        {
                            <div class="flex items-center p-2 bg-white rounded border">
                                <input type="checkbox" 
                                       id="allergie_@allergie.AllergieId" 
                                       name="SelectedAllergieIds" 
                                       value="@allergie.AllergieId"
                                       @(Model.SelectedAllergieIds != null && Model.SelectedAllergieIds.Contains(allergie.AllergieId) ? "checked" : "")
                                       class="form-check-input h-4 w-4 text-blue-500 border-gray-300 rounded focus:ring-blue-500" />
                                <label for="allergie_@allergie.AllergieId" 
                                       class="form-check-label ml-3 text-sm text-gray-700 cursor-pointer">
                                    @allergie.Libelle_al
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Aucun antécédent disponible</p>
                    }
                }
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center pt-6">
                <input type="submit" value="Créer le patient" 
                       class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-md font-medium transition-colors cursor-pointer" />
            </div>
        </form>

        <!-- Validation Summary -->
        <div asp-validation-summary="All" class="mt-6 p-4 bg-red-50 rounded-md">
            <div class="text-sm text-red-500"></div>
        </div>
    </div>
</div>