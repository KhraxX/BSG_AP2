@model Patient
@{
    ViewData["Title"] = "Supprimer un patient";
}
<form asp-action="DeleteConfirmed" method="POST">
    <input asp-for="PatientId" type="hidden" />
    <div class="max-w-2xl mx-auto mt-12 px-4">
        <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="text-2xl font-semibold text-center text-gray-800 mb-8">Confirmer la suppression</h2>

            <div class="bg-gray-50 rounded-lg p-6 mb-8">
                <div class="space-y-4">
                    <div class="flex items-center space-x-4">
                        <span class="font-medium text-gray-500 w-24">Prénom:</span>
                        <span class="text-gray-800">@Model.Prenom_p</span>
                    </div>
                    <div class="flex items-center space-x-4">
                        <span class="font-medium text-gray-500 w-24">Nom:</span>
                        <span class="text-gray-800">@Model.Nom_p</span>
                    </div>
                </div>
            </div>
            <div class="bg-red-50 rounded-lg p-6 text-center">
                <p class="text-gray-600 text-center mb-8">
                    Êtes-vous sûr de vouloir supprimer ce patient ? Cette action est irréversible.
                </p>

                <div class="flex justify-center space-x-4">

                    <button type="submit"
                        class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-md font-medium transition-colors">
                        Oui, supprimer le patient
                    </button>
                    <button onclick="history.back()"
                        class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-3 rounded-md font-medium transition-colors">
                        Non, revenir en arrière
                    </button>
                </div>
            </div>
        </div>
</form>