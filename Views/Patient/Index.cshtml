@model IEnumerable<Patient>

<div class="container-fluid">
<div class="row">
    <div class="col-3">
        <img class="doc" src="~/image/medecin.png">
    </div>

    <div class="col">
    <h1> Liste de vos Patients</h1>
    @if (Model.Count() > 0)
    {
        <div class="PatientTable">
        <table class="table table-white table-hover">
            <thead>
                <tr>
                    <th>Prénom</th>
                    <th>Nom de famille</th>
                    <th>Sexe</th>
                    <th>Numéro de Sécu</th>
                    <th>Détails</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => patient.Nom_p)</td>
                        <td>@Html.DisplayFor(m => patient.Prenom_p)</td>
                        <td>@Html.DisplayFor(m => patient.Sexe_p)</td>
                        <td>@Html.DisplayFor(m => patient.Num_secu)</td>                              
                        <TD><a asp-action="ShowDetails" asp-route-id="@patient.PatientId">

                            <button type="button" class="btn btn-info">Fiche</button>

                        </a> </TD>
                        <TD><a asp-action="Edit" asp-route-id="@patient.PatientId">

                            <button type="button" class="btn btn-warning">Modifier</button>

                        </a> </TD>
                        <TD><a asp-action="Delete" asp-route-id="@patient.PatientId">
                            <button type="button" class="btn btn-danger">Supprimer</button>


                        </a> </TD>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    }
    else
    {
        <p>Il n'y a pas de profs</p>
    }
    <a asp-action="Add">Ajouter un patient</a></div>

    <div class="col-3">
        <img class="doc2" src="~/image/medecin2.png">
    </div>
</div>
</div>