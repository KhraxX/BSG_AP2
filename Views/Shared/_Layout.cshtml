<!DOCTYPE html>
<html lang="fr" class="h-full">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="flex flex-col min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a asp-action="Index" asp-controller="Patient" class="flex items-center">
                    <img src="~/image/logo-gsb.png" width="90" height="50" alt="Logo GSB" class="h-12 w-auto">
                </a>
                <div class="flex items-center space-x-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="relative" x-data="{ open: false }">
                            <button type="button" x-on:click="open = !open" x-on:click.outside="open = false"
                                class="flex items-center space-x-2 text-gray-600 hover:text-gray-900">
                                <span>@User.Identity.Name</span>
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>

                            <div x-cloak x-show="open"
                                class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-10">
                                <a asp-action="Edit" asp-controller="Account"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    Modifier mon profil
                                </a>
                                <a asp-action="Logout" asp-controller="Account"
                                    class="block px-4 py-2 text-sm text-red-600 hover:bg-gray-100">
                                    Déconnexion
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a href="/Account/Login"></a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenu Principal -->
    <div class="flex-grow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <!-- Boutons de navigation -->
            <div class="mb-8">
                <div class="flex space-x-4">
                    <a asp-action="Index" asp-controller="Patient">
                        <button
                            class="nav-button px-6 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 rounded-lg border border-gray-200">
                            Patients
                        </button>
                    </a>
                    <a asp-action="Index" asp-controller="Medicament">
                        <button
                            class="nav-button px-6 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 rounded-lg border border-gray-200">
                            Médicaments
                        </button>
                    </a>
                    <a asp-action="Index" asp-controller="Allergie">
                        <button
                            class="nav-button px-6 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 rounded-lg border border-gray-200">
                            Allergies
                        </button>
                    </a>
                    <a asp-action="Index" asp-controller="Antecedent">
                        <button
                            class="nav-button px-6 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 rounded-lg border border-gray-200">
                            Antécédents
                        </button>
                    </a>
                    <a asp-action="Index" asp-controller="Ordonnance">
                        <button
                            class="nav-button px-6 py-2.5 text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 rounded-lg border border-gray-200">
                            Mes Ordonnances
                        </button>
                    </a>
                </div>
            </div>

            <!-- Contenu de la page -->
            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <div>
        <footer class="bg-gray-100 w-full">
            <div class="max-w-7xl mx-auto px-4 py-8">
                <div class="flex justify-center space-x-8">
                    <a asp-action="Index" asp-controller="FAQ"
                        class="text-gray-600 hover:text-gray-900 transition-colors">
                        FAQ
                    </a>
                    <a asp-action="Index" asp-controller="Contact"
                        class="text-gray-600 hover:text-gray-900 transition-colors">
                        Contact
                    </a>
                </div>
            </div>
        </footer>
    </div>
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
